{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
  },
  "include": [
    "scripts",
    "dist",
  ],
  "exclude": [
    "scripts/manual_testing/**/*",
  ]
}